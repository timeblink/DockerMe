server{
  listen 83 default_server bind;
  server_name_in_redirect on;
  server_name 127.0.0.1 scm.pcp.lutx0528.cn;
  root /website/pcp;
  proxy_redirect off;
  index index.html;
  access_log /var/log/nginx/pcp.access.log;
  error_log /var/log/nginx/pcp.errors.log;
  location / {
    try_files $uri $uri/ /index.html;
    autoindex on;
    autoindex_exact_size off;
    autoindex_localtime on;
  }
  location /js/ {
    alias /website/pcp/js/;
  }
  location /css/ {
    alias /website/pcp/css/;
  }
  location /fonts/ {
    alias /website/pcp/fonts/;
  }
  location /awesome/ {
    alias /website/pcp/font-awesom/;
  }

  location ~ ^/(images|javascript|js|css|flash|media|static)/ {
    root /website/pcp;
    expires 30d;
  }
  location /NginxStatus {
    stub_status on;
    access_log  on;
  }
}
